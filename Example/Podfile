# Deployment Target
platform :ios, '8.0'

# Add pods as frameworks so we could add obj-c and swift 3.0 pods
use_frameworks!

# Cartage support
install! 'cocoapods',
    :share_schemes_for_development_pods => true


target 'APExtensions_Example' do
    pod 'APExtensions', :path => '../'

    target 'APExtensions_Tests' do
        inherit! :search_paths

        pod 'Quick'
        pod 'Nimble'
        pod 'FBSnapshotTestCase'
        pod 'Nimble-Snapshots'
    end
end


post_install do |installer|
    # Carthage support.
    # It puts swift files into public headers so @IBInspectable won't be stripped out.
    headersBuildPhase = installer.pods_project.targets.select{ |x| x.name == 'APExtensions' }[0].headers_build_phase
    
    storyboardHeaders = installer.pods_project.development_pods['APExtensions/Storyboard']
    storyboardHeaders.files.each { |additionHeader|
        buildFile = headersBuildPhase.add_file_reference(additionHeader)
        buildFile.settings = { 'ATTRIBUTES' => ['Public']}
    }
    
    viewStateHeader = installer.pods_project.development_pods['APExtensions/ViewState/UIViewController+ViewState.swift']
    buildFile = headersBuildPhase.add_file_reference(viewStateHeader)
    buildFile.settings = { 'ATTRIBUTES' => ['Public']}
end
